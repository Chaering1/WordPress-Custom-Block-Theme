{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,


		"settings": {

			"color": {
				"palette": [
					{
						"slug": "black",
						"color": "#111",
						"name": "Black"
					},
					{
						"slug": "white",
						"color": "#fefefe",
						"name": "White"
					},
					{
						"slug": "grey",
						"color": "#383838",
						"name": "Grey"
					},
                    {
                        "slug": "blue",
                        "color": "#0000FF",
                        "name": "Blue"

                    }
				]
			},
            
			"typography": {
				"lineHeight": true,
				"fontFamilies": [
					{
						"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
						"slug": "system-fonts",
						"name": "System Fonts"
					},
					{
					"fontFamily": "Geneva, Tahoma, Verdana, sans-serif",
						"slug": "geneva-verdana"
					},
					{
						"fontFamily": "Cambria, Georgia, serif",
						"slug": "cambria-georgia"
					}
				],
				"fontSizes": [
					{
						"slug": "extra-small",
						"size": "1rem",
						"name": "Extra small"
					},
					{
						"slug": "small",
						"size": "1.125rem",
						"name": "Small"
					},
					{
						"slug": "medium",
						"size": "1.25rem",
						"name": "Medium"
					},
					{
						"slug": "large",
						"size": "1.5rem",
						"name": "Large"
					},
					{
						"slug": "extra-large",
						"size": "3rem",
						"name": "Extra large"
					}
				]
			},
			"spacing": {
                "spacingScale": {
                    "operator": "*",
                    "increment": 1.5,
                    "steps": 7,
                    "mediumStep": 1.5,
                    "unit": "rem"
                },
                "spacingSizes": [
                    {
                        "slug": "40",
                        "size": "1rem",
                        "name": "Small"
                    },
                    {
                        "slug": "50",
                        "size": "1.5rem",
                        "name": "Medium"
                    },
                    {
                        "slug": "60",
                        "size": "2rem",
                        "name": "Large"
                    }
                ]
            },
			"layout": {
				 "contentSize": "840px",
				 "wideSize": "1100px"
		}
	},


	"styles": {
		"color": {
			"background": "var(--wp--preset--color--Grey)",
			"text": "var(--wp--preset--color--White)"
		},
		"elements": {
			"link" :{
				"color": {
					"text": "var(--wp--preset--color--Blue)"
				}
			}
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontFamily": "var(--wp--preset--font-family--system-fonts)",
			"lineHeight": "1.7"
		},
        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--system-fonts)",
                    "fontSize" : "var(--wp--preset-font-size-extra-large)"
                }
            },
            "core/page-list": {
                "spacing": {
                    "padding": {
                        "left": "10px"
                    }
                }
            }
        }
	},
    "templateParts": [
        {
            "name": "header",
            "area": "header",
            "title": "Header"
        },
        {
            "name": "footer",
            "area": "footer",
            "title": "Footer"
        }
    ]
}